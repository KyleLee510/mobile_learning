<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_background"
    android:background="@drawable/bg_green_game">

    <TextView
        android:id="@+id/score_TextView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"

        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="50sp"
        android:fontFamily="@font/font_one"
        app:layout_constraintLeft_toRightOf="@+id/start_background"
        app:layout_constraintRight_toLeftOf="@+id/start_background"
        app:layout_constraintTop_toTopOf="@+id/start_background" />

    <Button
        android:id="@+id/Play_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/background_light"
        android:onClick="btnClick"
        android:text="Try Again"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_background" />
    <Button

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/background_light"
        android:onClick="btnExitClick"
        android:text="Exit"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Play_button" />

</android.support.constraint.ConstraintLayout>
